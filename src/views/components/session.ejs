<!-- Active Session -->
<div
  id="active_session"
  class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6 hidden"
>
  <div class="flex justify-between items-center">
    <h4 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">
      <i class="fas fa-user-check"></i> Active Session
    </h4>
    <div class="w-1/3">
      <img
        src="https://robohash.org/user"
        alt="Profile Picture"
        class="w-20 h-20 bg-slate-500 rounded-full mx-auto"
        id="profile_picture"
      />
    </div>
  </div>
  <div class="flex justify-between items-center">
    <button
      id="logout-btn"
      class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700"
    >
      <i class="fas fa-sign-out-alt"></i> Logout
    </button>
    <h5
      id="user_info"
      class="text-green-600 dark:text-green-400 font-bold text-lg w-1/3 text-center"
    ></h5>
  </div>
  <%- include('main/navigation') %>
</div>
