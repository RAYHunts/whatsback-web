<div id="schedule-modal" class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white dark:bg-zinc-800 rounded-lg p-6 w-full max-w-2xl mx-4">
      <h3 class="text-lg font-bold mb-4 dark:text-white">
        Schedule New Message
      </h3>
      <form class="grid grid-cols-2 gap-4" id="schedule-form" autocomplete="off">
        <input type="hidden" name="formAction" id="form-action">
        <input type="hidden" name="jobId" id="job-id">
        <div class="col-span-2">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Job Name</label>
          <input name="jobName" id="job-name" type="text" class="w-full px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" placeholder="Remind Me for Later" />
        </div>

        <div class="col-span-2">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Message Type</label>
          <select id="job-trigger" class="w-full px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" name="jobTrigger">
            <option value="send_message">Send Message</option>
            <option value="group_message">Send Group Message</option>
          </select>
        </div>

        <div class="col-span-2">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Recipient</label>
          <div class="flex gap-2">
            <input type="text" id="recipient" readonly class="flex-1 px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white read-only:dark:bg-slate-300 read-only:dark:text-zinc-900" />
            <input type="hidden" name="jobTargetNumberOrId" id="recipient-number-or-groupid">
            <input type="hidden" id="recipient-name" name="jobTargetName">
            <button type="button" id="open-address-book-modal" class="px-3 py-2 bg-gray-200 dark:bg-zinc-700 rounded-lg">
              <i class="fas fa-address-book dark:text-white"></i>
            </button>
          </div>
        </div>

        <div class="col-span-2">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Message Content</label>
          <textarea rows="4" id="job-message" name="jobMessage" class="w-full px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white"></textarea>
        </div>

        <div class="col-span-2">
          <select id="cronOptions" class="w-full px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white">
            <option value="">-- Predefined Cronjob --</option>
            <option value="0 9 * * *">Every day at 9:00 AM</option>
            <option value="0 8 * * 1-5">Every weekday at 8:00 AM</option>
            <option value="0 10 * * 1">Every Monday at 10:00 AM</option>
            <option value="0 17 * * 5">Every Friday at 5:00 PM</option>
            <option value="*/15 9-17 * * *">Every 15 minutes during business hours (9 AM - 5 PM)</option>
            <option value="0 0 * * *">Midnight every day</option>
            <option value="0 12 * * *">Noon every day</option>
            <option value="0 3 * * 0">Every Sunday at 3:00 AM</option>
            <option value="0 8 1 * *">Monthly on the 1st at 8:00 AM</option>
            <option value="0 * * * *">Every hour</option>
          </select>
        </div>

        <div class="col-span-2">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Schedule</label>
          <div class="flex gap-2 items-center">
            <div class="flex flex-col">
              <input type="text" name="jobCron" id="job-cron" class="flex-1 px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" placeholder="* * * * *" />
              <small class="dark:text-gray-400 italic text-gray-500">minute, hour, day (month), month, day (week) - Click the question icon for more.</small>
            </div>
            <button type="button" id="show-cron-help" class="px-3 py-2 text-blue-500 hover:text-blue-600">
              <i class="fas fa-question-circle"></i>
            </button>
          </div>
          <div class="bg-gray-700 dark:bg-zinc-800 text-white font-mono text-sm p-4 rounded-md my-3 hidden" id="cron-details"></div>
        </div>

        <div class="col-span-2 flex justify-end space-x-2 mt-4">
          <button type="button" id="close-schedule-modal" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg">
            Cancel
          </button>
          <button type="submit" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg">
            Save Schedule
          </button>
        </div>
      </form>
    </div>
  </div>
</div>