<div id="address-book-modal" class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white dark:bg-zinc-800 rounded-lg p-6 w-full max-w-md mx-4">
      <h3 class="text-lg font-bold mb-4 dark:text-white" id="address-book-modal-title">
        Select Contact
      </h3>

      <!-- Search Bar -->
      <div class="mb-4">
        <input type="text" id="address-search" placeholder="Search..." class="w-full px-4 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" />
      </div>

      <!-- Address List -->
      <div id="address-container" class="max-h-96 overflow-y-auto">
        <ul id="address-list" class="space-y-2">
          <!-- Dynamically populated -->
        </ul>
        <p id="address-loading-text" class="hidden text-center py-2">Loading...</p>
      </div>

      <div class="mt-4 flex justify-end">
        <button id="close-address-book-modal" class="px-4 py-2 bg-gray-600 text-gray-100 dark:text-gray-300 hover:bg-gray-700 dark:hover:bg-zinc-700 rounded-lg">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
