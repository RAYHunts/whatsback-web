<div id="deleteModal" class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white dark:bg-zinc-800 rounded-lg p-6 w-full max-w-md mx-4">
      <h3 class="text-lg font-bold mb-4 dark:text-white">Confirm Delete</h3>
      <p class="dark:text-gray-300 mb-6">
        Are you sure you want to delete this command? This action cannot be
        undone.
      </p>
      <input type="hidden" name="action" id="form_action" value="delete">
      <div class="flex justify-center space-x-2">
        <button type="button" id="btn-cancel-command" class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-zinc-700 rounded-lg">
          Cancel
        </button>
        <button type="submit" id="btn-confirm-delete-command" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg">
          Delete
        </button>
      </div>
    </div>
  </div>
</div>