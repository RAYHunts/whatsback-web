<div id="sendMessageModal" class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white dark:bg-zinc-800 rounded-lg p-6 w-full max-w-md mx-4">
      <h3 class="text-lg font-bold mb-4 dark:text-white">Send Message</h3>
      <form id="messageForm">
        <div class="mb-4">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">To</label>
          <input type="text" id="messageRecipient" readonly class="w-full px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" />
        </div>
        <div class="mb-4">
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Message</label>
          <textarea rows="4" id="message" required class="w-full px-3 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white"></textarea>
        </div>
        <div class="flex justify-end space-x-2">
          <button type="button" id="btn-close-message" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg">
            Cancel
          </button>
          <button type="submit" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg">
            Send
          </button>
        </div>
      </form>
    </div>
  </div>
</div>