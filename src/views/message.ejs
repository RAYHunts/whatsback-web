<!-- Send Message Content -->
<div class="p-6">
  <div class="bg-white dark:bg-zinc-800 dark:text-white rounded-lg shadow-sm p-6">
    <h1 class="text-2xl font-bold mb-4">Send Message</h1>
    <div class="mb-4">
      <label for="recipient_number" class="block text-gray-700 dark:text-gray-200 mb-2">Recipient</label>
      <div class="flex gap-2">
        <input type="text" id="recipient_name" name="recipient_name" placeholder="Contact Name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-zinc-800 dark:border-gray-700 dark:text-white cursor-not-allowed" />
        <input type="text" id="recipient_number" name="recipient_number" placeholder="Contact Number" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-zinc-800 dark:border-gray-700 dark:text-white cursor-not-allowed" />
        <button type="button" id="clear-selected-contact" class="px-4 py-2 bg-red-500 hover:bg-red-600 dark:bg-red-700 dark:hover:bg-red-600 rounded-md">
          <i class="fas fa-close text-white"></i>
        </button>
        <button type="button" id="btn-contact-modal" class="px-4 py-2 bg-green-500 hover:bg-green-600 dark:bg-green-600 dark:hover:bg-green-700 text-white rounded-md">
          <i class="fas fa-address-book text-white"></i>
        </button>
      </div>
    </div>
    <div class="mb-4">
      <label for="message" class="block text-gray-700 dark:text-gray-200 mb-2">Message</label>
      <div id="editor-container" class="w-full p-4 shadow rounded"></div>
    </div>
    <button type="button" id="form-send-message" class="bg-green-500 hover:bg-green-600 dark:bg-green-600 dark:hover:bg-green-700 text-white px-4 py-2 rounded">
      <i class="fas fa-paper-plane"></i> Send Message
    </button>
  </div>
</div>

<%- include('components/modals/message/contacts-modal') %>
<script src="/js/whatsback-editor.js"></script>
<script src="/js/message.js"></script>