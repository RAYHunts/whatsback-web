<div class="p-6">
  <h1 class="text-2xl font-bold mb-6 dark:text-white">
    Contacts Manager
  </h1>

  <!-- Search Bar -->
  <div class="mb-6">
    <input type="text" id="globalSearch" placeholder="Search all contacts..." class="w-full px-4 py-2 border rounded-lg dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" />
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Individual Contacts Column -->
    <div class="bg-gray-50 dark:bg-zinc-700 rounded-lg p-4">
      <h2 class="text-lg font-semibold mb-4 dark:text-white">Individual Contacts</h2>
      <div class="mb-4">
        <input type="text" id="contactSearch" placeholder="Search contacts..." class="w-full px-4 py-2 border rounded-lg dark:bg-zinc-600 dark:border-zinc-500 dark:text-white" />
      </div>
      <div class="max-h-[60vh] overflow-y-auto">
        <!-- Added scroll container -->
        <ul id="contactsList" class="space-y-2"></ul>
      </div>
    </div>

    <!-- Group Contacts Column -->
    <div class="bg-gray-50 dark:bg-zinc-700 rounded-lg p-4">
      <h2 class="text-lg font-semibold mb-4 dark:text-white">Group Contacts</h2>
      <div class="mb-4">
        <input type="text" id="groupSearch" placeholder="Search groups..." class="w-full px-4 py-2 border rounded-lg dark:bg-zinc-600 dark:border-zinc-500 dark:text-white" />
      </div>
      <div class="max-h-[60vh] overflow-y-auto">
        <!-- Added scroll container -->
        <ul id="groupsList" class="space-y-2"></ul>
      </div>
    </div>
  </div>
</div>

<%- include('components/modals/contact/send-message-modal') %>
<%- include('components/modals/contact/send-group-message-modal') %>
<script src="/js/contact.js"></script>