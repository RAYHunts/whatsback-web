<div class="bg-white dark:bg-gray-800 p-2 rounded-md shadow-md">
  <div
    class="mb-3 flex justify-between items-center border-b dark:border-gray-700 pb-2"
  >
    <h3 class="font-bold text-gray-900 dark:text-gray-200">
      Predefined Commands (Total: <%= totalCommand %> Available: <%= (10 -
      totalCommand) %>/10)
    </h3>
    <% if (totalCommand < 10) { %>
    <button
      id="addCommandButton"
      class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800 transition-colors"
    >
      Add Command
    </button>
    <% } %>
  </div>

  <table
    class="min-w-full bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-700 shadow-sm rounded-lg overflow-hidden"
  >
    <thead class="bg-gray-50 dark:bg-gray-700">
      <tr>
        <th
          class="px-6 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"
        >
          Command
        </th>
        <th
          class="px-6 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"
        >
          Response
        </th>
        <th
          class="px-6 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"
        >
          Actions
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
      <% for(let cmd of commands) { %>
      <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
        <td class="px-4 py-2 text-sm text-gray-900 dark:text-gray-200">
          <%= cmd.command %>
        </td>
        <td class="px-4 py-2 text-sm text-gray-900 dark:text-gray-200">
          <%= cmd.response %>
        </td>
        <td class="px-4 py-2 text-sm flex space-x-2">
          <button
            class="editCommandButton px-2 py-1 rounded text-white bg-blue-600 hover:bg-blue-900 dark:bg-blue-500 dark:hover:bg-blue-700"
            data-cmd="<%= JSON.stringify(cmd) %>"
          >
            Edit
          </button>
          <button
            class="deleteCommandButton px-2 py-1 rounded text-white bg-red-600 hover:bg-red-900 dark:bg-red-500 dark:hover:bg-red-700"
            data-cmd="<%= JSON.stringify(cmd) %>"
          >
            Delete
          </button>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<!-- Modal -->
<div
  id="modal"
  class="fixed inset-0 items-center justify-center bg-black bg-opacity-50 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300"
>
  <div
    id="modalContent"
    class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg lg:w-1/3 md:w-1/2 sm:w-1/2 w-full mx-5 scale-95 transition-transform duration-300"
  >
    <h3
      id="modalTitle"
      class="font-bold text-lg text-gray-900 dark:text-gray-200 mb-4"
    ></h3>
    <form id="modalForm">
      <div class="mb-4">
        <label
          for="command"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
          >Command</label
        >
        <input
          type="text"
          id="command"
          name="command"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-200"
          required
        />
      </div>
      <div class="mb-4">
        <label
          for="response"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
          >Response</label
        >
        <input
          type="text"
          id="response"
          name="response"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-200"
          required
        />
      </div>
      <input type="hidden" name="command_id" value="" id="command_id" />
      <input type="hidden" name="action" value="add" id="form_action" />
      <div class="flex justify-end space-x-2">
        <button
          type="button"
          id="cancelButton"
          class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700"
        >
          Cancel
        </button>
        <button
          type="submit"
          id="confirmButton"
          class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700"
        >
          Confirm
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/js/command.js"></script>
